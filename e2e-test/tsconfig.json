{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": false,
    "outDir": "./dist",
    "rootDir": ".",
    "types": ["node", "@playwright/test"]
  },
  "include": [
    "lib/**/*",
    "tests/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "test-results"
  ]
}
