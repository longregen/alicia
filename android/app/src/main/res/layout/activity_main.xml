<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <!-- Background overlay that tints during listening -->
    <View
        android:id="@+id/listeningOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/colorSurface"
        android:visibility="visible"/>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@android:color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="34sp"
            android:textStyle="bold"
            android:textColor="?attr/colorPrimary"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/statusText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tap_to_speak"
            android:textSize="16sp"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="40dp"/>

        <!-- Main action buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <FrameLayout
                android:id="@+id/micButtonContainer"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_marginEnd="24dp">

                <!-- Outermost wave ring -->
                <View
                    android:id="@+id/waveRing3"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_gravity="center"
                    android:background="@drawable/wave_ring_recording"
                    android:visibility="gone"/>

                <!-- Middle wave ring -->
                <View
                    android:id="@+id/waveRing2"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:layout_gravity="center"
                    android:background="@drawable/wave_ring_recording"
                    android:visibility="gone"/>

                <!-- Inner wave ring -->
                <View
                    android:id="@+id/waveRing1"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_gravity="center"
                    android:background="@drawable/wave_ring_recording"
                    android:visibility="gone"/>

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/activationButton"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    app:fabCustomSize="120dp"
                    app:maxImageSize="56dp"
                    app:tint="?attr/colorOnPrimaryContainer"
                    android:src="@drawable/ic_microphone"
                    app:backgroundTint="?attr/colorPrimaryContainer"
                    app:elevation="0dp"/>

            </FrameLayout>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/noteRecordButton"
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:fabCustomSize="120dp"
                app:maxImageSize="56dp"
                app:tint="?attr/colorOnSecondaryContainer"
                android:src="@drawable/ic_edit_note"
                app:backgroundTint="?attr/colorSecondaryContainer"
                app:elevation="0dp"
                android:contentDescription="@string/record_note"/>

        </LinearLayout>

        <!-- Divider between main actions and navigation -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="24dp"
            android:layout_marginHorizontal="32dp"
            android:background="?attr/colorOutline"
            android:alpha="0.2"/>

        <!-- VPN Status Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/vpnStatusCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="4dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:strokeWidth="0dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:contentDescription="@string/vpn_status_description">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="14dp">

                <ImageView
                    android:id="@+id/vpnIcon"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_vpn_shield"
                    app:tint="?attr/colorOnSurfaceVariant"
                    android:layout_marginEnd="12dp"
                    android:importantForAccessibility="no"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/vpnStatusTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/vpn_off"
                        android:textSize="15sp"
                        android:textColor="?attr/colorOnSurface"/>

                    <TextView
                        android:id="@+id/vpnStatusSubtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/vpn_tap_to_connect"
                        android:textSize="12sp"
                        android:textColor="?attr/colorOnSurfaceVariant"/>

                </LinearLayout>

                <com.google.android.material.materialswitch.MaterialSwitch
                    android:id="@+id/vpnToggle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Navigation buttons row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="20dp">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/conversationsButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:contentDescription="@string/conversations">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center"
                    android:layout_margin="14dp"
                    android:src="@drawable/ic_chat"
                    app:tint="?attr/colorPrimary"
                    android:importantForAccessibility="no"/>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/notesButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginHorizontal="4dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:contentDescription="@string/notes">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center"
                    android:layout_margin="14dp"
                    android:src="@drawable/ic_note"
                    app:tint="?attr/colorPrimary"
                    android:importantForAccessibility="no"/>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/settingsButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:contentDescription="@string/settings">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center"
                    android:layout_margin="14dp"
                    android:src="@drawable/ic_settings"
                    app:tint="?attr/colorPrimary"
                    android:importantForAccessibility="no"/>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <!-- Response card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="16dp"
            android:visibility="gone"
            android:id="@+id/responseCard">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="4dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/you_said"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurfaceVariant"/>

                    <ImageButton
                        android:id="@+id/copyTranscribedButton"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_copy"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="@string/copy"
                        android:padding="6dp"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/transcribedText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="?attr/colorOnSurface"
                    android:layout_marginBottom="16dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="4dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/alicia_says"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurfaceVariant"/>

                    <ImageButton
                        android:id="@+id/copyResponseButton"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_copy"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="@string/copy"
                        android:padding="6dp"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/responseText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="?attr/colorOnSurface"/>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</ScrollView>

</FrameLayout>
